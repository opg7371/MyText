<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.filmygeekstudio.mytext" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_action_android"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >




        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.filmygeekstudio.mytext.SpashActivity1"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.SplashActivity2" />
                <category android:name="android.intent.category.DEFAULT"  />
            </intent-filter>
        </activity>
        <activity
            android:name="com.filmygeekstudio.mytext.SplashActivity2"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.filmygeekstudio.mytext.SplashActivity3" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.filmygeekstudio.mytext.SplashActivity3"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.filmygeekstudio.mytext.SplashActivity4" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.filmygeekstudio.mytext.SplashActivity4"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.filmygeekstudio.mytext.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" />

            </intent-filter>
        </activity>
        <activity
            android:name="com.filmygeekstudio.mytext.SplashMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MainActivity" />
                <category android:name="android.intent.category.DEFAULT"  />
            </intent-filter>
        </activity>

    </application>

    </manifest>
